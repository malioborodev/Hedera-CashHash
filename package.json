{
  "name": "hedera-cashhash",
  "version": "1.0.0",
  "description": "Receivable financing on Hedera",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:backend": "tsx watch server.ts",
    "dev:frontend": "next dev --turbopack",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "tsc",
    "build:frontend": "next build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "node dist/server.js",
    "start:frontend": "next start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "lint": "next lint",
    "compile-contracts": "hardhat compile",
    "deploy-contracts": "hardhat run scripts/deploy.js --network hedera"
  },
  "dependencies": {
    "@hashgraph/hedera-wallet-connect": "^1.4.1",
    "@hashgraph/hethers": "^1.2.5",
    "@hashgraph/proto": "^2.14.0",
    "@hashgraph/sdk": "^2.70.0",
    "@headlessui/react": "^2.0.4",
    "@heroicons/react": "^2.1.3",
    "@hookform/resolvers": "^3.3.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.5",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.1",
    "autoprefixer": "^10.4.21",
    "axios": "^1.6.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "express": "^4.18.2",
    "hardhat": "^2.19.2",
    "hashconnect": "^3.0.13",
    "lucide-react": "^0.539.0",
    "multer": "^1.4.5-lts.1",
    "nanoid": "^5.0.4",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.48.2",
    "recharts": "^2.8.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.11",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "concurrently": "^8.2.2",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "postcss": "^8",
    "tailwindcss": "^4",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3"
  }
}
