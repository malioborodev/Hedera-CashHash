{
  "name": "hedera-cashhash",
  "version": "1.0.0",
  "description": "Receivable financing on Hedera",
  "private": true,
  "type": "module",
  "scripts": {
    "dev:backend": "tsx watch server.ts",
    "dev:frontend": "next dev --turbopack",
    "dev": "concurrently \"npm run dev:backend\" \"npm run dev:frontend\"",
    "build:backend": "tsc",
    "build:frontend": "next build",
    "build": "npm run build:backend && npm run build:frontend",
    "start:backend": "node dist/server.js",
    "start:frontend": "next start",
    "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\"",
    "lint": "next lint"
  },
  "dependencies": {
    "@hashgraph/sdk": "^2.70.0",
    "@hashgraph/hedera-wallet-connect": "^1.4.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.5-lts.1",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4",
    "nanoid": "^5.0.4",
    "next": "15.4.6",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "hashconnect": "^3.0.13"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.10.5",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@eslint/eslintrc": "^3",
    "tsx": "^4.6.2",
    "typescript": "^5.3.3",
    "tailwindcss": "^4",
    "@tailwindcss/postcss": "^4",
    "eslint": "^9",
    "eslint-config-next": "15.4.6",
    "postcss": "^8",
    "concurrently": "^8.2.2"
  }
}